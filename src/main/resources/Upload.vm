<!DOCTYPE html>
<html ng-app="testApp">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">
        <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js"></script>
        <script src="js/upload.js"></script>
        <title> Upload page </title>
        <style type="text/css">
            .bs{
                margin: 10px auto; 
                width:285px;
            }
            .category {
                position:relative;
                display: inline-block;
                float:left;
            }
            audio { 
	            width: 176px; 
	            display: block; 
	            margin:10px; 
            }
        </style>
    </head>
    <body>
        <div class="navbar navbar-inverse">
          <div class="navbar-inner">

            <font color="white" size="5"> <i class="glyphicon glyphicon-user"></i> Hello $name </font>
          </div>
        </div>
        <div ng-controller="ServerFile" class="row">
            <div class="col-md-3">
                <div class="bs">
                    <select id="categoryName" class="form-control" ng-change="getImages()" ng-model="ncateg" ng-options="aCategory for aCategory in categories"></select>
                </div>
                  </br> 
                <div class="bs"> 
                    <input class="btn btn-info" type="file" file-model="myFile"/>
                    <div class="text-center bs">
                        <button class="btn btn-info" ng-click="uploadFile()">Upload</button>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                    <div ng-repeat="allValues in allValue" class="category">
                        <h4 class="text-center">{{allValues.TXT}}</h4>
                        <img ng-src={{allValues.IMG}} title={{allValues.TXT}} width="176" height="220"/>
                        <audio preload="auto" controls src="http://10.0.0.100:8080/sounds/cats/1.mid"></audio>
                    </div> 
                </div>  
            </div>
        </div>
    </body>
</html>